<soap:setTransaction xmlns:ns2="http://soap.api.controller.web.payjar.com/">
    <Api>ONE_ZERO</Api>
    <Safekey>{safekey}</Safekey>
    <TransactionType>{transaction_type}</TransactionType>
    <Stage>{stage}</Stage>
    <AdditionalInformation>
        <cancelUrl>{cancel_url}</cancelUrl>
        <demoMode>{demo_mode}</demoMode>
        <merchantReference>{merchant_ref}</merchantReference>
        <notificationUrl>{notification_url}</notificationUrl>
        <returnUrl>{return_url}</returnUrl>
        <secure3d>{secure3d}</secure3d>
        <supportedPaymentMethods>{supported_payments}</supportedPaymentMethods>
        <showBudget>{show_budget}</showBudget>
    </AdditionalInformation>
    <Customer>
        <merchantUserId>{merchant_user_id}</merchantUserId>
        <email>{customer_email}</email>
        <firstName>{customer_firstname}</firstName>
        <lastName>{customer_lastname}</lastName>
        <mobile>{customer_mobile}</mobile>
        <regionalId>{customer_regional_id}</regionalId>
        <countryCode>{customer_country_code}</countryCode>
    </Customer>
    <Basket>
        <amountInCents>{basket_amount}</amountInCents>
        <currencyCode>{basket_currency_code}</currencyCode>
        <description>{basket_description}</description>
    </Basket>
    <Loyalty>
        <amountInCents>{loyalty_amount}</amountInCents>
        <information>{loyalty_information}</information>
        <membershipNumber>{loyalty_membership_number}</membershipNumber>
    </Loyalty>
    <Customfield>
        <key>MERCHANTID</key>
        <value>{merhant_id}</value>
    </Customfield>
</soap:setTransaction>
